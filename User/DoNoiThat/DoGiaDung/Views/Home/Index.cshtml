<section id="aa-product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-product-area">
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <!-- Start men product category -->
                            <div class="tab-pane fade in active" id="men">

                                <ul class="aa-product-catg">
                                    <!-- start single product item -->
                                    @foreach (var item in Model)
                                    {
                                        <li>
                                            <figure>
                                                <a class="aa-product-img" href="/Product/Product_Detail/@item.product_id"><img style="height:300px;width:250px;" src="@Url.Content(item.image_link)" alt="polo shirt img"></a>
                                                <a class="aa-add-card-btn" href="/GioHang/OrderNow/@item.product_id"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                            </figure>
                                            <figcaption>
                                                <h4 class="aa-product-title"><a href="#">@Html.DisplayFor(modelitem => item.product_name)</a></h4>
                                                <span class="aa-product-price">@Html.DisplayFor(modelitem => item.price)</span><span class="aa-product-price"><del>@Html.DisplayFor(modelitem => item.price_out)</del></span>
                                            </figcaption>
                                            <div class="aa-product-hvr-content">
                                                <a href="#" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><span class="fa fa-heart-o"></span></a>
                                                <a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><span class="fa fa-exchange"></span></a>
                                                <a href="#" data-toggle2="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#quick-view-modal"><span class="fa fa-search"></span></a>
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <!-- quick view modal -->
                                @foreach (var item in Model)
                                {
                                    <div class="modal fade" id="quick-view-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <div class="row">
                                                        <!-- Modal view slider -->
                                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                                            <div class="aa-product-view-slider">

                                                                <div id="demo-1" class="simpleLens-gallery-container">
                                                                    <div class="simpleLens-container">
                                                                        <div class="simpleLens-big-image-container"><a data-lens-image="@Url.Content(item.image_link)" class="simpleLens-lens-image"><img src="@Url.Content(item.image_link)" class="simpleLens-big-image"></a></div>
                                                                    </div>
                                                                    <div class="simpleLens-thumbnails-container">
                                                                        <a data-big-image="@Url.Content(item.image_link)" data-lens-image="@Url.Content(item.image_link)" f class="simpleLens-thumbnail-wrapper" href="/Product/Product_Detail/@item.product_id">
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- Modal view content -->
                                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                                            <div class="aa-product-view-content">
                                                                <h3>@Html.DisplayFor(itemodel => item.product_name)</h3>
                                                                <div class="aa-price-block">
                                                                    <span class="aa-product-view-price">@Html.DisplayFor(itemmodel => item.price)</span>
                                                                    <p class="aa-prod-category" style="color:red;">
                                                                        Category: <a href="#">@Html.DisplayFor(itemmodel => item.CATALOG.catalog_name)</a>
                                                                    </p>
                                                                    <p class="aa-product-avilability">Kho: <span>@Html.DisplayFor(itemmodel => item.quantity)</span></p>
                                                                </div>
                                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officiis animi, veritatis quae repudiandae quod nulla porro quidem, itaque quis quaerat!</p>
                                                                <div class="aa-prod-quantity">
                                                                </div>
                                                                <div class="aa-prod-view-bottom">
                                                                    <a href="/GioHang/OrderNow/@item.product_id" class="aa-add-to-cart-btn"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                                                    <a href="/Product/Product_Detail/@item.product_id" class="aa-add-to-cart-btn">View Details</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!-- /.modal-content -->
                                        </div><!-- /.modal-dialog -->
                                    </div>
                                }
                                <!-- / quick view modal -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


